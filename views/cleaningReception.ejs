<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>クリーニング新規受付</title>
</head>

<body>
    <header>
        <%- include('header'); %>
    </header>
    
    
    <main>
        <div class="main-header">
            <h1>クリーニング受付</h1>
        </div>

        <!-- 入力値のエラー表示 -->
        <% if (errors.length > 0) { %>
            <ul class="errors">
                <% errors.forEach((error) => { %>
                    <li><%= error %></li>
                <% }) %>
            </ul>
        <% } %>

        <div class="reception-form-wrapper">
            <form action="/reception" method="post">
                <label for="nameKanaList">氏名(カタカナ)</label>
                    <div class="name-kana-select">
                        <select name="nameKana" id="nameKanaList">
                            <option value="" selected>選択して下さい</option>
                            <% customers.forEach((customer) => { %>
                                    <option value='<%= customer.name_kana %>'> <%= customer.name_kana %> </option>
                            <% }) %>
                        </select>
                    </div>
    
                <label for="cleaningItemList">クリーニングアイテム</label>
                    <div class="cleaning-item-select">
                        <select name="cleaningItem" id="cleaningItemList">
                            <option value="" selected>選択して下さい</option>
                            <% cleaningItems.forEach((cleaningItem) => { %>
                                <option value='<%= cleaningItem.cleaning_item %>'> <%= cleaningItem.cleaning_item %> </option>
                            <% }) %>
                        </select>
                    </div>
    
                <input class="button" type="submit" value="登録">
            </form>
        </div>

    </main>


    <footer>
        <%- include('footer'); %>
    </footer>


</body>

</html>