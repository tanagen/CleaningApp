<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>お客様情報</title>
</head>

<body>
    <head>
        <%- include('header'); %>
    </head>
    
    <main>
        <div class="main-header">
            <h1>お客様情報</h1>
        </div>

        <div class="customer-info-table-wrapper">
            <table>
                <tr>
                    <th>ID</th>
                    <th>氏名(漢字)</th>
                    <th>氏名(カナ)</th>
                    <th>メールアドレス</th>
                </tr>
                
                <% customers.forEach((customer) => { %>
                    <tr>
                        <td class="id-column"><%= customer.id %></td>
                        <td class="name_kanji-column"><%= customer.name_kanji %></td>
                        <td class="name_kana-column"><%= customer.name_kana %></td>
                        <td class="email-column"><%= customer.email %></td>
                        <td>
                            <!-- 削除ボタン -->
                            <!-- ルートパラメータの使用 -->
                            <form action="/customer-delete/<%= customer.id%>" method="post">
                                <input type="submit" value="削除">
                            </form>
                        </td>
                        <td>
                            <!-- 編集ボタン -->
                            <a href="/register-edit/<%= customer.id %>">編集</a>
                        </td>
                    </tr>
                <% }) %> 
                        
            </table> 
        </div>
    </main>


    <footer>
        <%- include('footer'); %>
    </footer>
    
</body>
</html>
